<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/look_before_edit_layout" android:layout_width="match_parent" android:layout_height="match_parent">
    <include android:id="@+id/customToolbarLookBookDetailsBeforeEdit" layout="@layout/custom_toolbar_other_noimage"/>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/look_bottom_sticky_buttons" android:layout_below="@+id/customToolbarLookBookDetailsBeforeEdit">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:orientation="vertical" android:id="@+id/look_name_and_pub" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="22sp" android:id="@+id/look_book_name" android:padding="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="8dp" android:layout_marginRight="15dp" android:text="Book Name" style="@style/TextAppearance.AppCompat.Title"/>
                <TextView android:textSize="18sp" android:layout_gravity="center_vertical" android:id="@+id/look_book_author_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_marginTop="3dp" android:text="By " style="@style/TextAppearance.AppCompat.Headline"/>
            </LinearLayout>
            <com.smarteist.autoimageslider.SliderView android:id="@+id/look_image_slider" android:layout_width="match_parent" android:layout_height="300dp" android:layout_marginTop="3dp" android:layout_below="@+id/look_name_and_pub" app:sliderAnimationDuration="2000" app:sliderAutoCycleDirection="2" app:sliderAutoCycleEnabled="true" app:sliderIndicatorAnimationDuration="600" app:sliderIndicatorGravity="51" app:sliderIndicatorMargin="15dp" app:sliderIndicatorOrientation="0" app:sliderIndicatorPadding="3dp" app:sliderIndicatorRadius="2dp" app:sliderIndicatorSelectedColor="#5a5a5a" app:sliderIndicatorUnselectedColor="#fff" app:sliderScrollTimeInSec="1" app:sliderStartAutoCycle="true"/>
            <LinearLayout android:orientation="vertical" android:id="@+id/look_price_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/look_image_slider">
                <LinearLayout android:orientation="horizontal" android:id="@+id/show_selling_price_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:textSize="19sp" android:id="@+id/look_currency_symbol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="10dp" android:text="Rs" style="@style/TextAppearance.AppCompat.Body2"/>
                    <TextView android:textSize="30sp" android:id="@+id/look_selling_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="656" style="@style/TextAppearance.AppCompat.Headline"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:id="@+id/look_printed_price_layout" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/look_printed_price_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:text="Printed Price: " style="@style/TextAppearance.MaterialComponents.Headline6"/>
                    <TextView android:id="@+id/look_printed_price" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="656" style="@style/TextAppearance.MaterialComponents.Headline6"/>
                    <TextView android:textColor="#ff3d00" android:id="@+id/look_saving_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text=" Save " style="@style/TextAppearance.MaterialComponents.Headline6"/>
                    <TextView android:textColor="#ff3d00" android:id="@+id/look_saving_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:text="Rs" style="@style/TextAppearance.MaterialComponents.Headline6"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/look_book_description_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_below="@+id/look_price_layout">
                <TextView android:textSize="16sp" android:id="@+id/look_book_description_tag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="15dp" android:text="Description: " style="@style/TextAppearance.AppCompat.Body2"/>
                <androidx.cardview.widget.CardView android:id="@+id/look_book_description_card_view" android:background="@color/cardview_light_background" android:padding="8dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="3dp" android:layout_marginRight="15dp" android:layout_marginBottom="3dp" android:outlineAmbientShadowColor="@color/purple_700" app:cardBackgroundColor="#ccff90" app:contentPadding="3dp">
                    <TextView android:textSize="16sp" android:id="@+id/look_book_description" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="sjhkjdfjdf this gfj" style="@style/TextAppearance.AppCompat.Body1"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp">
                    <TextView android:textSize="16sp" android:id="@+id/look_book_pub_tag" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="8dp" android:text="Publisher: " style="@style/TextAppearance.AppCompat.Body2"/>
                    <TextView android:textSize="16sp" android:id="@+id/look_book_publisher" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="8dp" android:text=": gfjhjdfsdsfj" style="@style/TextAppearance.AppCompat.Body1"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout android:orientation="horizontal" android:id="@+id/look_bottom_sticky_buttons" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton android:textSize="18sp" android:textColor="@color/white" android:id="@+id/look_Delete" android:background="@color/red" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="5dp" android:text="Delete" android:layout_weight="1"/>
        <androidx.appcompat.widget.AppCompatButton android:textSize="18sp" android:textColor="@color/white" android:id="@+id/look_Edit" android:background="@color/darkgreen" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="10dp" android:text="Edit" android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>
