<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawer" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relative1" android:layout_width="match_parent" android:layout_height="match_parent">
        <androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/coordinatorLayoutDashboard" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/bottomNavigationView">
            <include android:id="@+id/customToolbarRelativeLayout" layout="@layout/custom_toolbar"/>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/pullToRefresh" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/coordinatorLayoutDashboard" app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
                <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
        <ImageView android:id="@+id/noBookFoundImage" android:visibility="invisible" android:layout_width="300dp" android:layout_height="300dp" android:layout_marginTop="90dp" android:src="@drawable/nobookfoundillustration" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="#d50000" android:gravity="left" android:id="@+id/noBookFoundMsg1" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_marginTop="10dp" android:text="No one is selling used book in your city." android:layout_below="@+id/noBookFoundImage"/>
        <TextView android:textSize="20sp" android:textStyle="normal|bold|italic" android:textColor="@color/teal_700" android:gravity="left" android:id="@+id/noBookFoundMsg2" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="15dp" android:layout_marginTop="20dp" android:text="Be the first to sell used book in your city, add book for sale now." android:layout_below="@+id/noBookFoundMsg1"/>
        <androidx.appcompat.widget.AppCompatButton android:textSize="20sp" android:textColor="#0d47a1" android:id="@+id/query_submit_new_radius" android:background="#dce157" android:padding="3dp" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Submit" android:layout_above="@+id/bottomNavigationView" android:layout_centerHorizontal="true" style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"/>
        <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@+id/bottomNavigationView" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" app:labelVisibilityMode="1" app:menu="@menu/bottom_nav_menu"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView android:theme="@style/navigationTheme" android:layout_gravity="start" android:id="@+id/navigation" android:background="#ffffff" android:fitsSystemWindows="true" android:layout_width="wrap_content" android:layout_height="match_parent" app:headerLayout="@layout/header" app:menu="@menu/navigation_items"/>
</androidx.drawerlayout.widget.DrawerLayout>
