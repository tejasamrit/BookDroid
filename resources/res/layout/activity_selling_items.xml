<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:id="@+id/drawerSelling" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/relative1" android:layout_width="match_parent" android:layout_height="match_parent">
        <include android:id="@+id/customToolbarRelativeLayout" layout="@layout/custom_toolbar_other"/>
        <ImageView android:id="@+id/bookNotSellingImage" android:visibility="invisible" android:layout_width="350dp" android:layout_height="350dp" android:layout_marginTop="75dp" android:src="@drawable/nobooksellingillustration" android:layout_below="@+id/customToolbarRelativeLayout" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
        <TextView android:textSize="18sp" android:textStyle="normal|bold|italic" android:id="@+id/bookNotSellingMsg" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="15dp" android:text="All books will be displayed here if you add them for sell. You can add used Books for sell." android:layout_above="@+id/bottomNavigationViewSelling" android:layout_below="@+id/bookNotSellingImage"/>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout android:id="@+id/pullToRefreshSelling" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/bottomNavigationViewSelling" android:layout_below="@+id/customToolbarRelativeLayout" app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerViewSelling" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView android:id="@+id/bottomNavigationViewSelling" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" app:labelVisibilityMode="1" app:menu="@menu/bottom_nav_menu"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView android:theme="@style/navigationTheme" android:layout_gravity="start" android:id="@+id/navigationSelling" android:background="#ffffff" android:fitsSystemWindows="true" android:layout_width="wrap_content" android:layout_height="match_parent" app:headerLayout="@layout/header" app:menu="@menu/navigation_items"/>
</androidx.drawerlayout.widget.DrawerLayout>
